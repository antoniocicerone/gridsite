{
  "name": "grid-site",
  "description": "front-end grid for website",
  "version": "1.0.1",
  "keywords": [
    "css",
    "grid"
  ],
  "author": "antonio cicerone",
  "scripts": {
    "bundlesize": "bundlesize",
    "css": "npm-run-all --parallel css-lint* css-compile* --sequential css-prefix* css-minify*",
    "css-lint": "stylelint --syntax scss \"scss/**/*.scss\"",
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/main.scss dist/css/main.css && node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/grid.scss dist/css/grid.css",
    "css-prefix": "postcss --config build/postcss.config.js --replace \"dist/css/*.css\" \"!dist/css/*.min.css\"",
    "css-minify": "cleancss --level 1 --source-map --source-map-inline-sources --output dist/css/main.min.css dist/css/main.css && cleancss --level 1 --source-map --source-map-inline-sources --output dist/css/grid.min.css dist/css/grid.css"
  },
  "dependencies": {
    "autoprefixer": "^9.3.1",
    "bundlesize": "^0.17.0",
    "clean-css-cli": "^4.2.1",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.1",
    "stylelint": "^9.7.1",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^1.0.0",
    "stylelint-scss": "^3.3.2"
  },
  "bundlesize": [
    {
      "path": "./dist/css/grid.css",
      "maxSize": "5 kB"
    },
    {
      "path": "./dist/css/grid.min.css",
      "maxSize": "5 kB"
    },
    {
      "path": "./dist/css/main.css",
      "maxSize": "5 kB"
    },
    {
      "path": "./dist/css/main.min.css",
      "maxSize": "5 kB"
    }
  ]
}
